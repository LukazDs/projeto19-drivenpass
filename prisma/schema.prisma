// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id         Int           @id @default(autoincrement())
  email      String        @unique
  password   String
  credential Credentials[]
  notes      Notes[]
  cards      Cards[]
}

model Credentials {
  id             Int    @id @default(autoincrement())
  url            String
  authorName     String
  password       String
  title          String
  credentialName String
  label          String
  users          Users  @relation(fields: [userId], references: [id])
  userId         Int
}

model Notes {
  id         Int    @id @default(autoincrement())
  title      String
  annotation String
  user       Users  @relation(fields: [userId], references: [id])
  userId     Int
}

model Cards {
  id             Int      @id @default(autoincrement())
  number         Int
  nameHolderCard String
  securityCode   Int
  expirationDate DateTime
  password       String
  isVirtual      Boolean
  typeCard       Role
  user           Users    @relation(fields: [userId], references: [id])
  userId         Int
}

enum Role {
  Credito
  Debito
  CreditoDebito
}
